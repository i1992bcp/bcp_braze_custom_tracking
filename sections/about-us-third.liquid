<style>
  .about-us_sub_heaeder {
    margin: 5% 0;
    font-size: 14px;
    color: #676765;
  }
  #about_us_third_banner ul {
    list-style-type:none;font-size:16px;margin-right: 4em;
  }
  #about_us_third_banner li {
    font-weight: 600;
  }
  .about_image_third {
    padding: 20px 0;
  }
  #about_us_third_banner ul li::before {
    content: "\25E6";
    color: #cc3333;
    font-weight: 600;
    font-size:18px;
    display: inline-block; 
    width: 1.5em;
    margin-left: -1em;
  }
  #about_us_third_banner {
    display: block;
    padding-left: 20px;
  }
  .about-us-third-main_thread {
    display: block !important;
    padding: 5em 0;
  }
  .about_header_third {
    margin-bottom: 5%;
    text-align: center;
  }
  .pricebar-bar {
    background-color: {{ section.settings.color_price_about_us_third }};
  }
  .pricebar {
    background: #ccc;
    margin: 10px 0;
  }
  .svg_class_image_png {
    position: absolute;
    width: 100%;
    line-height: 0;
    top: -5%;
  }
  .svg_class_image_png svg {
    width: 100%;
  }
  .price-title {
      font-family: Roboto Slab;
      font-weight: 600;
    }
  @media only screen and (min-width: 901px) {
    .about_header_third {
      text-align: left;
    }
    .about_image_third {
      padding: 0;
    }
    .about-us-third-main_thread {
      display: flex !important;
      justify-content: space-between;
      padding: 3em 0;
    }
    #about-us-live_text {
      width: 50%;
    }
    .about-us_sub_heaeder {
      font-size:18px;
    }
    #about_us_third_banner ul {
      font-size:18px;
    }
    #about_us_third_banner ul li::before {
      font-size:20px;
    }
    #about_us_third_banner {
      display: flex;justify-content: center;padding-left: 0;
    }
    .svg_class_image_png {
      top: -10%;
    }
  }
</style>
