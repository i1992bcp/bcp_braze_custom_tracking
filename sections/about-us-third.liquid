  <div class="container" style="background-color: {{ section.settings.color_bg_about_us_third }};">
    <div class="page-width">
      <section class="about-us-third-main_thread">
        <div id="about-us-live_text">
          <div class="about_header about_header_third" style="color: {{ section.settings.bg_header_about_us_third }};">{{ section.settings.our_header_about_us_third }}</div>
          <div class="about-us_sub_heaeder about_header_third" style="color: {{ section.settings.bg_sub_header_about_us_third }};">{{ section.settings.our_sub_header_about_us_third }}</div>
          <div id="about_us_third_banner">
            <ul class="ab-first">
              <li>{{ section.settings.our_list_one_about_us_third }}</li><li>{{ section.settings.our_list_two_about_us_third }}</li><li>{{ section.settings.our_list_third_about_us_third }}</li>
            </ul>
            <ul class="ab-second">
              <li>{{ section.settings.our_list_fourth_about_us_third }}</li><li>{{ section.settings.our_list_five_about_us_third }}</li>
            </ul>
          </div>
        </div>
        <div id="about-us_banner_img">
          <img src="{{ section.settings.image_about_us_third | img_url : '450x' }}"  class="about_image_third"/>
          <div>
            <div class="about-us-flex"><div class="price-title">Our Price</div>
              <div class="counter-holder">$<span class="counter" data-count="{{ section.settings.our_price_about_us_third }}">0</span></div></div>
              <div class="pricebar clearfix " data-percent="{{ section.settings.our_percentage_about_us_third }}">
                  <div class="pricebar-bar"></div>
              </div>
              <div class="about-us-flex"> <div class="price-title">Typical Retailer</div>
              <div class="counter-holder">$<span class="counter" data-count="{{ section.settings.typical_price_about_us_third }}">0</span></div></div>
              <div class="pricebar clearfix " data-percent="{{ section.settings.typical_percentage_about_us_third }}">
                  <div class="pricebar-bar"></div>
              </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
