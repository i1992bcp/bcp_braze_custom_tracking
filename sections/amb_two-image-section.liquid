<style>
	.flex_main_wrapper {
		display: block;
	}
	.amb_img {
		width: 100%;
		height: auto;
	}
	.amb_left_header {
		font-family: Roboto Slab;
		font-weight: 600;
		font-size:21px;
		margin-bottom: 2%;
		text-align: center;
	}
	.amb_left_subheader {
		color: #727270;
		font-size:14px;
		text-align: center;
	}
	.amb_left_side {
		margin: 0;
		padding: 2%;
	}
	@media only screen and (min-width: 901px) {
		.flex_main_wrapper {
			display: grid;
			grid-template-columns: 1fr 1fr;
  		grid-template-rows: auto auto;
			grid-gap: 10px;
		}
		.amb_left_side {
			display: -ms-grid;
			display: grid;
			place-content: center;
			padding:14%;
		}
		.amb_left_header {
			font-size: 32px;
			text-align:left;
		}
		.amb_left_subheader {
			font-size:16px;
			text-align:left;
		}
	}
</style>
<section class="amb_two-side_wrapper page-width container">
	<div class="flex_main_wrapper">
		<div class="amb_left_side amb_same">
			<div class="amb_left_header">{{ section.settings.amb_second_text }}</div>
			<div class="amb_left_subheader">{{ section.settings.amb_second_sub_text }}</div>
		</div>
		<div class="amb_right_side amb_same">
			<img class="amb_img" src="{{ section.settings.amb_second_image | img_url: 'x500' }}" alt="Product Journey Ambassador Program" height="500"/>
		</div>
	</div>
</section>

{% schema %}
    {
      "name": "Ambassador Second Section",
      "settings": [
        {
          "type": "text",
          "id": "amb_second_text",
          "label": "Header",
          "default": "Building Products Alongside Customers"
        },
        {
          "type": "text",
          "id": "amb_second_sub_text",
          "label": "Sub Header",
          "default": "Best Choice Products is proud to share a program where the gap between brand and customer is finally connected! We built this program in pursuit of our mission to include customers when developing best-sellers. This is an exclusive, invite-only program. It’s the perfect program for those who regularly shop at BCP and leave us valuable feedback through reviews. In joining this program, you’ll continue your status as a valued customer, but also provide us with your insights on future BCP best-sellers!"
        },
        {
          "type": "image_picker",
          "id": "amb_second_image",
          "label": "Image"
        }
      ],
      "presets": [
        {
          "name": "Ambassador Second Section",
          "category": "Text"
        }
      ]
    }
  {% endschema %}