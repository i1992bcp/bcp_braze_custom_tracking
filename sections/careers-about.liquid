<div class="page-width" style="margin-top: 5%;">
<div class="about grid">
        <div class="grid__item one-whole text-center" style="background-color: #f9f9f9;padding: 50px 0px;">      
          	<h2 class="heading-font-every h3">{{ section.settings.title }}</h2>
          	<div class="intro" style="color:#676767;font-size:14px;">{{ section.settings.intro }}</div>
        </div>                
    {% for block in section.blocks %}
      {% case block.settings.width %}
        {% when '16%' %}
          {%- assign block_width = 'medium-up--one-sixth' -%}
          {%- assign image_size = '400x400' -%}     
        {% when '25%' %}
          {%- assign block_width = 'medium-up--one-quarter' -%}
          {%- assign image_size = '400x400' -%}
        {% when '33%' %}
          {%- assign block_width = 'medium-up--one-third' -%}
          {%- assign image_size = '500x500' -%}
        {% when '50%' %}
          {%- assign block_width = 'medium-up--one-half' -%}
          {%- assign image_size = '800x800' -%}
        {% when '66%' %}
          {%- assign block_width = 'medium-up--two-thirds' -%}
          {%- assign image_size = '1024x1024' -%}
        {% when '75%' %}
          {%- assign block_width = 'medium-up--three-quarters' -%}
          {%- assign image_size = '1024x1024' -%}
        {% when '100%' %}
          {%- assign block_width = 'one-whole' -%}
          {%- assign image_size = '2048x2048' -%}
      {% endcase %} 
        <div class="grid__item text-center {{ block_width }} medium--{{ block.settings.medium_width }} small--{{ block.settings.small_width }}" {{ block.shopify_attributes }} style="margin-bottom:10px;margin-top:5%;">      
        <div class="image">
             {{ block.settings.image | img_url: image_size | img_tag: image_alt }}
        </div>
        <div class="text" style="color:#282828;font-size:14px;font-weight: 500;">
            {{ block.settings.header_text }}
       </div>  
        <div class="text" style="color:#676767;font-size:14px;">
             {{ block.settings.text }}
        </div>            
    	</div>
    {% endfor %}
    <div class="clearfix"></div>
  </div>
</div>
