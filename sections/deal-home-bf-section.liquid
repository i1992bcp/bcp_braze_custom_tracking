
<style>
    .home-text-holder-landing {
    text-align: center;
}.hs_title {
    font-weight: 500;
}
  .hs_title_hover:hover {
  text-decoration: underline;
}
.hs-up_price {
    font-weight: 500;
}
.home-off-style {
    font-weight: 500;
}
.main_button_style_deal {
    width:320px;
    text-align: center;
}
.new_deal_button_home {
    color: #fff;height: 55px;border-radius: 4px;text-align: center;font-weight: 500;padding: 15px 0;font-size: 14px;width: 350px; margin: 0 auto;
}
@media only screen and (max-width: 968px) {
  .new_deal_button_home { 
    width : 100%;
  }
}
.home-landing-page-flex {
  text-align : center;
}
</style>

<div class="container">
	<div class="main-holder page-width" style="background-color : {{ section.settings.home_section_bgcolor_day_image_text }};padding-top:20px;">
        {% if section.settings.home_section_title != blank %}
            <div class="section-header text-center" style="color:{{ section.settings.home_section_bgcolor_day_header_text }}">
                <h2 class="{{ section.settings.title_class }}">{{ section.settings.home_section_title | escape }}</h2>
            </div>
        {% endif %}
        <div class="grid page_new_deal">
            {% for block in section.blocks %}
                <div class="{% unless section.settings.masonry %}grid__item test_hide_large extra-small--{{ block.settings.home_section_image_size_small_extra }}  small-down--{{ block.settings.home_section_image_size_small }} {{ block.settings.home_section_image_size }}{% endunless %}" {{ block.shopify_attributes }} style="margin-bottom: 1%;">
                <div class="home-landing_holder hitarth">
                    <div class="home-landing-page-flex">
                        {% if block.settings.home_section_image.size > 0 %}
                            <a href="{{ block.settings.home_section_image_link }}">
                                <img src="{{ block.settings.home_section_image | img_url: '650x500' }}" alt="{{ block.settings.image.alt }}" style="position: relative;" class="image_home_wrapper" />
                            </a>
                        {% endif %}
                        <div class="home-text-holder-landing">
                            {% if block.settings.home_section_image_title.size > 0  %}
                                {% if block.settings.home_section_image_title.size > 0 %}<a href="{{ block.settings.home_section_image_link }}" target="_blank"><div class="hs_title hs_title_hover" style="font-size:{{ block.settings.home_section_fonts_title }};color:{{ block.settings.home_section_color_title_text }}">{{ block.settings.home_section_image_title }}</div> </a>{% endif %}
                                {% if block.settings.home_section_price_text.size > 0 %}<div class="home_price_title" style="font-size:{{ block.settings.home_section_fonts_price }};color:{{ block.settings.home_section_color_day_price_text }}">{{ block.settings.home_section_price_text }}</div>{% endif %}
                                {% if block.settings.home_section_upto_text.size > 0 %}<div class="hs-up_price" style="font-size:{{ block.settings.home_section_fonts_up_to }};color:{{ block.settings.home_section_color_up_image_text }}">{{ block.settings.home_section_upto_text }}{% if block.settings.home_section_coupon_code.size > 0 %}<span class="home-off-style" style="font-size:{{ block.settings.home_section_fonts_off }};color:{{ block.settings.home_section_color_day_image_text }}">{{ block.settings.home_section_coupon_code }}</span>{% endif %}</div>{% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
                </div>
            {% endfor %}
        </div>
        {% if section.settings.home_section_image_button.size > 0 %}<a href="{{ section.settings.home_section_button_link }}" target="_blank"><div class="new_deal_button_home" style="background-color:{{ section.settings.home_section_color_day_new_button }};">{{ section.settings.home_section_image_button }}</div></a>{% endif %}

	</div>
</div>
<div class="clearfix"></div>
