      },
      {
        "type": "header",
        "content": "Statement - 2"
      },
      {
        "type": "image_picker",
        "id": "statement_2_image",
        "label": "Statement - 2 - Image"
      },
      {
        "type": "text",
        "id": "statement_2_title",
        "label": "Heading",
        "default": "Rich text"
      },
      {
        "type": "richtext",
        "id": "statement_2_text",
        "label": "Text",
        "default": "<p>Use this section to share information about your brand."
      },
      {
        "type": "header",
        "content": "Statement - 3"
      },
      {
        "type": "image_picker",
        "id": "statement_3_image",
        "label": "Statement - 3 - Image"
      },
      {
        "type": "text",
        "id": "statement_3_title",
        "label": "Heading",
        "default": "Rich text"
      },
      {
        "type": "richtext",
