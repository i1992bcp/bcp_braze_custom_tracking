{% assign address = format-address %}
{% capture full_name_in %}{{ address.name }}<br>{% endcapture %}
{% capture default_formatted_address %}{{ address | format_address }}{% endcapture %}

{% assign default_formatted_address = default_formatted_address | remove_first: full_name_in %}
{% assign default_formatted_address = default_formatted_address | remove_first: address.phone %}

<div class="address body-address-font-every">
  {% if address.name != blank %}
    <div class="address__name ">
     {{ address.name }}
    </div>
  {% endif %}

  <div class="address__address">
    {{ default_formatted_address }}
  </div>
</div>
