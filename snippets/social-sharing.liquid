<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing">
  <a class="sharing-link" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
    <span aria-hidden="true">{% include 'icon-facebook' %}</span>
    <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
  </a>
  <a class="sharing-link" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
    <span aria-hidden="true">{% include 'icon-twitter' %}</span>
    <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
  </a>
  <a class="sharing-link" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
    <span aria-hidden="true">{% include 'icon-pinterest' %}</span>
    <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
  </a>
</div>
