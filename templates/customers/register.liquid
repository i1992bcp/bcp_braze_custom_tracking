<div class="container">
  <div class="page-width">
    <div class="account-pages">
      <h1 class="title row text-left">{{ 'customer.register.title' | t }}</h1>
      <p class="text-left intro">Get access to BCP Rewards, favorites, view order history, and more.</p>
      {% form 'create_customer' %}
        {{ form.errors | default_errors }}
         <h5 style="margin-top:0;">OR</h5>    
        <div class="input-wrapper form-row">
          <label for="FirstName">
            {{ 'customer.register.first_name' | t }}
          </label>
          <input type="text"
            name="customer[first_name]"
            id="FirstName"
            data-desktop-autofocus
            {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
        </div>

        <div class="input-wrapper form-row">
          <label for="LastName">
            {{ 'customer.register.last_name' | t }}
          </label>
          <input type="text"
            name="customer[last_name]"
            id="LastName"
            {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
        </div>

        <div class="input-wrapper form-row">
          <label for="Email">
            {{ 'customer.register.email' | t }}
          </label>
          <input type="email"
            name="customer[email]"
            id="Email"
            class="{% if form.errors contains 'email' %}input-error{% endif %}"
            value="{% if form.email %}{{ form.email }}{% endif %}"
            spellcheck="false"
            autocomplete="off"
            autocapitalize="off">
        </div>

        <div class="input-wrapper form-row">
          <label for="CreatePassword">
            {{ 'customer.register.password' | t }}
          </label>
          <input type="password"
            name="customer[password]"
            id="CreatePassword"
            class="{% if form.errors contains 'password' %}input-error{% endif %}">
        </div>
        <div class="text-right">
            <input type="hidden" name="customer[accepts_marketing]" value="" />
            <input type="checkbox" name="customer[accepts_marketing]" checked="checked" />
            Email me about the latest sales and updates
        </div>

        <div class="large-row">
          <input type="submit" value="Create Account" class="btn btn--fullwidth">
        </div>
      <h5>OR</h5>
      <div class="one-click-social-login"></div>  
        <h5><em>Already a Member?</em></h5>
       <div class="large-row">
            <a href="/account/login"><span class="create-button-login btn btn--fullwidth">Sign in</span></a>
          </div>
      {% endform %}
    </div>
  </div>
</div>
